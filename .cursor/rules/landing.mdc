import { Dimensions } from 'react-native';

export const ResponsiveBreakpoints = {
  mobile: {
    small: 320,    // iPhone SE
    medium: 375,   // iPhone 12/13 
    large: 414,    // iPhone 12/13 Pro Max
  },
  tablet: {
    portrait: 768,  // iPad portrait
    landscape: 1024, // iPad landscape  
  },
  desktop: {
    small: 1280,   // Small laptops
    medium: 1440,  // Standard monitors
    large: 1920,   // Large monitors
    xlarge: 2560,  // 4K displays
  }
} as const;

export const useResponsiveDesign = () => {
  const { width: windowWidth, height: windowHeight } = Dimensions.get('window');
  
  return {
    windowWidth,
    windowHeight,
    isMobile: windowWidth < ResponsiveBreakpoints.tablet.portrait,
    isTablet: windowWidth >= ResponsiveBreakpoints.tablet.portrait && windowWidth < ResponsiveBreakpoints.desktop.small,
    isDesktop: windowWidth >= ResponsiveBreakpoints.desktop.small,
    isLargeDesktop: windowWidth >= ResponsiveBreakpoints.desktop.large,
    
    // Dynamic spacing following existing SACRED_SPACING pattern
    spacing: {
      horizontal: windowWidth < ResponsiveBreakpoints.tablet.portrait ? 24 : windowWidth < ResponsiveBreakpoints.desktop.small ? 32 : 48,
      vertical: windowWidth < ResponsiveBreakpoints.tablet.portrait ? 16 : 24,
    },
    
    // Layout configurations
    layout: {
      featureColumns: windowWidth < ResponsiveBreakpoints.tablet.portrait ? 1 : windowWidth < ResponsiveBreakpoints.desktop.small ? 2 : 3,
      tabHeight: windowWidth < ResponsiveBreakpoints.tablet.portrait ? 60 : windowWidth < ResponsiveBreakpoints.desktop.small ? 70 : 80,
      maxContentWidth: Math.min(windowWidth - 32, 1440), // Max content width with margins
    },
    
    // Touch targets following iOS HIG
    touchTarget: {
      minimum: 44,
      recommended: windowWidth < ResponsiveBreakpoints.tablet.portrait ? 44 : 48,
    }
  };
};
