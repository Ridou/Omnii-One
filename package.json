{
  "name": "Omnii",
  "private": true,
  "engines": {  
  "node": ">=18.0.0",  
  "pnpm": ">=8.0.0"  
},
  "packageManager": "pnpm@10.0.0",
  "scripts": {
    "build": "turbo run build",
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && git clean -xdf",
    "clean:workspaces": "turbo run clean",
    "auth:generate": "npm run --workspace=@omnii/auth generate",
    "db:push": "turbo -F @omnii/db push",
    "db:studio": "turbo -F @omnii/db studio",
    "dev": "turbo watch dev --continue",
    "dev:local": "turbo dev --filter=@omnii/omnii_mcp... --filter=@omnii/omnii-mobile... ",
    "dev:next": "turbo watch dev -F @omnii/nextjs...",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "npx sherif@latest",
    "postinstall": "npm run lint:ws",
    "typecheck": "turbo run typecheck",
    "ui-add": "turbo run ui-add",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "devDependencies": {
    "@turbo/gen": "^2.5.4",
    "prettier": "catalog:",
    "turbo": "^2.5.4",
    "typescript": "catalog:"
  },
  "prettier": "@omnii/prettier-config",
  "version": "1.0.0"
}
