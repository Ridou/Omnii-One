{
  "buildCommand": "npm run build:web:static && node scripts/generate-static-html.cjs",
  "outputDirectory": "dist-static",
  "rewrites": [
   
    {
      "source": "/privacy-policy",
      "destination": "/privacy-policy.html"
    },
    {
      "source": "/terms-of-service", 
      "destination": "/terms-of-service.html"
    },
    {
      "source": "/about",
      "destination": "/about.html"
    },
    {
      "source": "/support",
      "destination": "/support.html"
    },
    {
      "source": "/sms-consent",
      "destination": "/sms-consent.html"
    },
    {
      "source": "/(auth|tabs|request)/(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/emergency-logout",
      "destination": "/index.html"
    },
    {
      "source": "/",
      "destination": "/landing.html",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "(?i).*bot.*"
        }
      ]
    },
    {
      "source": "/",
      "destination": "/landing.html",
      "has": [
        {
          "type": "header",
          "key": "user-agent", 
          "value": "(?i).*crawler.*"
        }
      ]
    },
    {
      "source": "/",
      "destination": "/landing.html",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "(?i).*spider.*"
        }
      ]
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/privacy-policy.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    },
    {
      "source": "/terms-of-service.html", 
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    },
    {
      "source": "/about.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/support.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/sms-consent.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/googleF7XC7eDi6hzXCdTRDmoDWeLiZwFKCS9WY2ZuUubxtqE.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000"
        }
      ]
    },
    {
      "source": "/landing.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    },
    {
      "source": "/(favicon\\.ico|favicon\\.svg|apple-touch-icon\\.png|icon-.*\\.png|logo\\.png|manifest\\.json)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ]
} 